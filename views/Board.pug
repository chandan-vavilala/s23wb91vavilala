extends layout
block content
    h1= title
    p Number of rows are #{query.rows} and columns are #{query.cols}
    - var rows = Number(query.rows)
    - var col = Number(query.cols)
    if Number.isNaN(rows) || Number.isNaN(col)
        p Rows or Columns should be a number
    else if rows>10 || rows<1
         p Row numbers should be between 1 and 10
    else if col>10 || col<1

        p Column numbers should be between 1 and 10
    else
           table#outer
             - for(let i=0; i<rows; i++) {
                 tr#middle
                    - for(let j=0;j<col;j++) {
                         if (i === j)
                            td= 1
                         else if (i > j)
                             td= 0
                         else
                             td= j - i + 1
                    -}
             -}